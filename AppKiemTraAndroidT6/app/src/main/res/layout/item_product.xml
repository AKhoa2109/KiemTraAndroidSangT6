<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardProduct"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:clipToOutline="true"
    android:cardUseCompatPadding="true"
    android:cardCornerRadius="30dp"
    android:cardElevation="4dp">

    <!-- Bên trong CardView, ta dùng LinearLayout để xếp ảnh và text theo chiều dọc -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:src="@drawable/img_product2" />

        <!-- TextView hiển thị tên món ăn hoặc sản phẩm -->
        <TextView
            android:id="@+id/dtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Beef and Mustard Pie"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
